<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPrimos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="171dp"
        android:drawableTop="@drawable/ic_rocket"
        android:text="@string/button1" />

    <Button
        android:id="@+id/buttonBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonPrimos"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="66dp"
        android:drawableTop="@drawable/ic_beer"
        android:text="@string/button2" />

    <Button
        android:id="@+id/buttonAnimales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonPrimos"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="60dp"
        android:drawableTop="@drawable/ic_cloud"
        android:text="@string/button3" />

    <Button
        android:id="@+id/buttonFlores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonAnimales"
        android:layout_alignEnd="@+id/buttonBeer"
        android:drawableTop="@drawable/ic_dinero"
        android:text="@string/button4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="269dp"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="232dp"
        android:layout_marginTop="111dp"
        app:srcCompat="@drawable/rocket" />
</RelativeLayout>