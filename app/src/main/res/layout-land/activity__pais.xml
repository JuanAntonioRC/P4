<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Pais">

    <fragment
        android:id="@+id/fragmentPais"
        android:name="com.studium.es.practica4pmdm.FragmentPais"
        android:layout_width="224dp"
        android:layout_height="307dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-2dp"
        android:layout_toStartOf="@+id/textPais1" />

    <fragment
        android:id="@+id/textPais1"
        android:name="com.studium.es.practica4pmdm.FragmentCapital"
        android:layout_width="235dp"
        android:layout_height="308dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="135dp" />

    <Button
        android:id="@+id/buttonComparar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="35dp"
        android:text="@string/comparar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="110dp" />
</RelativeLayout>